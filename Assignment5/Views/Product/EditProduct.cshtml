@model List<Entities.ProductDTO>
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list=ViewBag.List;
    
}

<h2>EditProduct</h2>
@foreach (var obj in Model)
{
    <form method="POST" action="/Product/UpdateProduct" enctype="multipart/form-data" style="float: left;margin-left: 500px; width: 400px;height: 560px;background-color: white ;border-radius: 20px; padding: 10px; margin-top: 100px;">
        <div class="form-group" style="background-color: LightSeaGreen;font-size: 20pt;">
            <label style="margin-left: 20px; padding: 10px; color: white;">Edit PRODUCT</label>
        </div>
        <div class="form-group" style="font-size: 15pt;">
            <label>Name</label>
            <input class="form-control" type="text" name="name" placeholder="Name...." value="@obj.name"><br>
        </div>
        <div class="form-group" style="font-size: 15pt;">
            <label>Price</label>
            <input class="form-control" type="text" name="price" placeholder="Price...." value="@obj.price">
        </div>
        <div class="form-group" style="font-size: 15pt;">
            <label>Type Select</label>
            <select class="form-control" name="type">
                <option selected>--Select--</option>
                @foreach (var type in (ViewBag.lis as List<Entities.TypeDTO>))
                {
                    if (@type.typeName == @obj.typeName)
                    {
                        <option value="@type.typeId" selected>@type.typeName</option>
                    }
                    else
                    {
                        <option value="@type.typeId">@type.typeName</option>
                    }
                }
            </select>
        </div>
        <div class="form-group" style="font-size: 15pt;">
            <label>Description</label>
            <textarea class="form-control" name="description" rows="1" cols="30" placeholder="Description" value="@obj.description"></textarea>
        </div>
        <div class="form-group" style="font-size: 15pt;">
            <label>Picture</label><br>
            <input type="file" name="picture">
        </div>
        <div style="margin-left: 110px">
            <button type="Submit" name="btnEdit" class="btn btn-success btn-lg">Edit Product</button>
        </div>
        <p><input type="hidden" name="id" value="@obj.productId" /></p>
        <p><input type="hidden" name="PictureName" value="@obj.picURL" /></p>
    </form>
}