@{ 
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@{
    ViewBag.Title = "Login";
}


<div>
    <form action="/Home/ValidateLogin" method="Post" style="float: left;margin-left: 300px; width: 350px;height: 350px;background-color: cadetblue ;border-radius: 20px; padding: 10px; margin-top: 100px;">
        <div class="form-group" style="background-color: LightSeaGreen;font-size: 20pt;">
            <label style="margin-left: 20px; padding: 10px;">Sign In</label>
        </div>
        <div class="form-group" style="font-size: 15pt;">
            <label> Login </label>
            <input class="form-control" type="text" name="username" placeholder="Login...." required><br>
        </div>
        <div class="form-group" style="font-size: 15pt;">
            <label>Password</label>
            <input class="form-control" type="password" name="password" placeholder="Password...." required>
        </div>
        <div style="margin-left: 110px">
            <button type="Submit" name="btnSubmit" class="btn btn-success btn-lg">Sign In</button>
        </div>
    </form>
    <span> @ViewBag.msg</span>
   
</div>